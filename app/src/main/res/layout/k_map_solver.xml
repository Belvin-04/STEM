<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KMapSolver">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/aa"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="AA"
        android:padding="3sp"
        app:boxCornerRadiusTopStart="10sp"
        app:layout_constraintBottom_toTopOf="@id/ba"
        app:layout_constraintEnd_toStartOf="@id/ab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="01"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ab"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="AB"
        android:padding="3sp"
        app:boxCornerRadiusTopEnd="10sp"
        app:layout_constraintBottom_toTopOf="@id/bb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/aa"
        app:layout_constraintTop_toTopOf="@id/aa">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="01"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ba"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="BA"
        android:padding="3sp"
        app:boxCornerRadiusBottomStart="10sp"
        app:layout_constraintEnd_toStartOf="@id/bb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aa">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="01"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/bb"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="BB"
        android:padding="3sp"
        app:boxCornerRadiusBottomEnd="10sp"
        app:layout_constraintBottom_toBottomOf="@id/ba"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ba"
        app:layout_constraintTop_toTopOf="@id/ba">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="01"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/kMapSolveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solve"
        app:layout_constraintTop_toBottomOf="@id/bb" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/kMapSolveBtn">

        <TableRow>

            <TextView
                android:id="@+id/aaText"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/abText"
                android:layout_weight="1"
                android:text="0"
                android:textSize="40sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/baText"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/bbText"
                android:layout_weight="1"
                android:text="0"
                android:textSize="40sp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>